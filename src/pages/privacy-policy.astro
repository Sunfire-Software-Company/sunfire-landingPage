---
import Policy from '../components/blog/policy.astro';
import '../styles/styles.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Política de Privacidad - Sunfire</title>
    <style>

        .h1-container {
            text-align: center;
        }
        
        .h1-container h1 {
            text-align: center;
            margin: 0;
            padding: 20px 0;
        }
        
        .policy-section p,
        .policy-section div:not(.h1-container) {
            text-align: justify;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
            text-align: justify;
        }
        
        .policy-container {
            max-width: 800px;
            margin: 0 auto;
            background: transparent;
            padding: 20px;
        }
        
        .back-button {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        
        .back-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="policy-container">
        <a href="/" class="back-button">← Volver al inicio</a>
        <Policy/>
    </div>
</body>
</html>